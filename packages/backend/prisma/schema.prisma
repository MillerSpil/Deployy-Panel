generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
}

model Server {
  id          String   @id @default(uuid())
  name        String
  gameType    String
  status      String   @default("stopped")
  port        Int      @unique
  maxPlayers  Int
  path        String   @unique
  version     String?

  config      String   @default("{}")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([gameType])
  @@index([status])
}
