generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  permissions String   @default("[]")
  isSystem    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users User[]

  @@index([name])
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  roleId       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  role         Role?          @relation(fields: [roleId], references: [id])
  serverAccess ServerAccess[]

  @@index([email])
  @@index([roleId])
}

model Server {
  id              String   @id @default(uuid())
  name            String
  gameType        String
  status          String   @default("stopped")
  port            Int      @unique
  maxPlayers      Int
  path            String   @unique
  version         String?
  backupRetention Int      @default(5)
  backupPath      String?

  config          String   @default("{}")

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  serverAccess    ServerAccess[]
  backups         Backup[]
  scheduledTasks  ScheduledTask[]

  @@index([gameType])
  @@index([status])
}

model Backup {
  id        String   @id @default(uuid())
  serverId  String
  name      String
  filename  String
  size      BigInt
  path      String

  createdAt DateTime @default(now())

  server    Server   @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@index([serverId])
  @@index([createdAt])
}

model ServerAccess {
  id              String   @id @default(uuid())
  userId          String
  serverId        String
  permissionLevel String
  createdAt       DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  server Server @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@unique([userId, serverId])
  @@index([userId])
  @@index([serverId])
}

model ScheduledTask {
  id        String    @id @default(uuid())
  serverId  String
  type      String    // 'restart', 'backup', 'command'
  schedule  String    // Schedule identifier like 'every_6h', 'daily_03:00'
  enabled   Boolean   @default(true)
  config    String    @default("{}") // JSON config (command text, backup name, etc.)
  lastRun   DateTime?
  nextRun   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  server Server @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@index([serverId])
  @@index([enabled])
  @@index([nextRun])
}

model PanelSettings {
  id        String   @id @default("default")
  settings  String   @default("{}") // JSON: { autoCheckUpdates: boolean }
  updatedAt DateTime @updatedAt
}

model UpdateBackup {
  id         String   @id @default(uuid())
  version    String   // Version before update
  backupPath String   // Path to backup archive
  createdAt  DateTime @default(now())

  @@index([createdAt])
}
