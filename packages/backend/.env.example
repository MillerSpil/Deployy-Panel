# ─── Docker Users ───
# docker-compose.yml handles DATABASE_URL, NODE_ENV, and SERVERS_BASE_PATH for you.
# You only need to set:
#   JWT_SECRET   — generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#   FRONTEND_URL — your domain or IP (e.g. "https://panel.example.com")

# Database
# Docker users: leave this alone — docker-compose.yml maps the database to /data/deployy.db automatically.
DATABASE_URL="file:./dev.db"

# Server
PORT=3000
# Docker users: leave this alone — docker-compose.yml sets this to production automatically.
NODE_ENV=development
FRONTEND_URL="http://localhost:5173"

# Game Servers
# Docker users: leave this alone — docker-compose.yml sets it to /opt/deployy-servers automatically.
SERVERS_BASE_PATH="./servers"

# Authentication
# IMPORTANT: Generate a secure random string (minimum 32 characters)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-secret-key-minimum-32-characters-here"
JWT_EXPIRATION="24h"

# Logging
LOG_LEVEL="info"

# Panel Updates
# AUTO_CHECK_UPDATES is stored in the database, not here.
# This setting can be changed in the admin panel settings.

# For development testing only
UPDATE_TEST_MODE=false

# Telemetry
# Anonymous usage data helps the developer understand how Deployy is used.
# Set to false to disable. Can also be toggled in the admin panel.
TELEMETRY_ENABLED=true
