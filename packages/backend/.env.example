# Database
DATABASE_URL="file:./dev.db"

# Server
PORT=3000
NODE_ENV=development
FRONTEND_URL="http://localhost:5173"

# Game Servers
SERVERS_BASE_PATH="./servers"

# Authentication
# IMPORTANT: Generate a secure random string (minimum 32 characters)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-secret-key-minimum-32-characters-here"
JWT_EXPIRATION="24h"

# Logging
LOG_LEVEL="info"

# Panel Updates
# AUTO_CHECK_UPDATES is stored in the database, not here.
# This setting can be changed in the admin panel settings.

# For development testing only
UPDATE_TEST_MODE=false

# Telemetry
# Anonymous usage data helps the developer understand how Deployy is used.
# Set to false to disable. Can also be toggled in the admin panel.
TELEMETRY_ENABLED=true
